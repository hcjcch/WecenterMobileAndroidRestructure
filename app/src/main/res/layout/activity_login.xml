<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_blur_jni_bitmap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WencenterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="用户名"
            android:textColor="#50ffffff"
            android:id="@+id/edt_user_name"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="49dp"
            android:hint="密码"
            android:layout_alignTop="@+id/edt_user_name"
            android:layout_alignLeft="@+id/edt_user_name"
            android:layout_alignStart="@+id/edt_user_name"
            android:layout_alignRight="@+id/edt_user_name"
            android:layout_alignEnd="@+id/edt_user_name"
            android:inputType="textPassword"
            android:textColor="#50ffffff"
            android:id="@+id/edt_passwd" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/btn_login"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:background="@drawable/login_buttton_selector"
            android:clickable="true"
            android:layout_below="@+id/edt_passwd"
            android:layout_alignLeft="@+id/edt_passwd"
            android:layout_alignStart="@+id/edt_passwd"
            android:layout_alignRight="@+id/edt_passwd"
            android:layout_alignEnd="@+id/edt_passwd" />

    </RelativeLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="70sp"
            android:text="WeCenter"/>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>